---
import { ClientRouter } from "astro:transitions";
import Footer from "@/components/layout/Footer.astro";
import Header from "@/components/layout/Header.astro";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{t("head.title")}</title>
        <ClientRouter />
    </head>
    <body>
        <Header />
        <slot />
        <Footer />
    </body>
</html>

<style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Montserrat+Alternates:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Montserrat+Underline:ital,wght@0,100..900;1,100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap");
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }

    :root {
        --background-color: #03101e;
        --text-color: #c5d9f2;
    }

    * {
        font-family: "Montserrat";
    }

    .header {
        display: flex;
        justify-content: space-around;
        align-items: center;
        padding: 1rem;
        background-color: var(--background-color);
        color: var(--text-color);
    }

    .header__image {
        width: clamp(50px, 50dvw, 350px);
        height: auto;
    }

    .header > a {
        font-size: clamp(0.5rem, 2dvw, 1.3rem);
        color: var(--text-color);
        text-decoration-line: none;
    }

    .footer__socials__svg {
        color: var(--text-color);
        width: 3rem;
        scale: 2;
    }

    .presentacion {
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
        height: fit-content;
    }

    .presentacion__articulo {
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    .presentacion__video {
        max-width: 100dvw;
        height: auto;
    }

    .presentacion__articulo > h1 {
        position: absolute;
        left: 50%;
        top: 10%;
        margin-inline: 5%;
        font-weight: 600;
        font-size: clamp(1rem, 5dvw, 2rem);
        max-width: 75%;
        background: linear-gradient(
            135deg,
            rgba(197, 217, 242, 1) 0%,
            rgba(37, 60, 93, 1) 25%,
            rgba(37, 60, 93, 1) 75%,
            rgba(197, 217, 242, 1) 100%
        );
        background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .presentacion__articulo > a {
        position: absolute;
        top: 70%;
        margin-inline: 5%;
        font-size: clamp(10px, 5dvw, 40px);
        text-decoration-line: none;
        background-color: #0078d4;
        color: #c5d9f2;
        padding-block: 0.5rem;
        padding-inline: 1.5rem;
    }

    .presentacion__imagen {
        max-width: 100dvw;
    }

    .presentacion::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            180deg,
            rgba(3, 16, 30, 1) 0%,
            rgba(255, 255, 255, 0) 10%,
            rgba(255, 255, 255, 0) 90%,
            rgba(3, 16, 30, 1) 100%
        );
        pointer-events: none;
        z-index: 1;
    }

    .fotos {
        display: grid;
        margin-top: 1rem;
        grid-template-columns: auto auto;
        justify-content: center;
        gap: 10%;
    }

    .fotos > img {
        max-width: 100%;
        border-radius: 1rem;
    }

    .caracteristicas {
        display: flex;
        flex-direction: column;
        margin: 1rem;
        font-family: "Montserrat", Arial, Helvetica, sans-serif;
    }

    .politicas {
        margin-inline: 1rem;
    }

    [class$="--article"] {
        display: flex;
        flex-direction: column;
        margin: 1rem;
        font-family: "Montserrat", Arial, Helvetica, sans-serif;
    }

    [class$="--titulo"] {
        width: 100%;
        font-family: "Montserrat Alternates", "Times New Roman", Times, serif;
        margin: 0.5rem;
        color: #13233e;
    }

    footer {
        display: flex;
        justify-content: space-around;
        align-items: center;
        padding: 1rem;
        background-color: var(--background-color);
        color: var(--text-color);
    }

    footer > section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .footer__socials > a {
        display: flex;
    }
</style>
